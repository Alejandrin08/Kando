<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kando_desktop.Views.Components.BoardCardView"
             xmlns:local="clr-namespace:kando_desktop"
             xmlns:models="clr-namespace:kando_desktop.Models"
             xmlns:strings="clr-namespace:kando_desktop.Resources.Strings"
             xmlns:converters="clr-namespace:kando_desktop.Converters"
             x:DataType="models:Board">

    <ContentView.Resources>
        <converters:IntToProgressConverter x:Key="IntToProgressConverter"/>
    </ContentView.Resources>

    <Border Style="{StaticResource InteractiveCardStyle}"
            HeightRequest="200"
            WidthRequest="280"
            Margin="0,0,20,20">

        <Border.GestureRecognizers>
            <PointerGestureRecognizer PointerEntered="OnPointerEntered"
                                      PointerExited="OnPointerExited"/>
        </Border.GestureRecognizers>

        <Grid RowDefinitions="Auto, *, Auto, Auto" Padding="20">

            <Grid Grid.Row="0" ColumnDefinitions="Auto, *">

                <Border Grid.Column="0"
                        StrokeShape="RoundRectangle 12"
                        HeightRequest="45" WidthRequest="45"
                        BackgroundColor="{AppThemeBinding Light=#f3f4f6, Dark=#1f2937}"
                        StrokeThickness="0">
                    <Image Source="{Binding Icon}" Aspect="AspectFit"
                           HorizontalOptions="Center" VerticalOptions="Center"
                           WidthRequest="25" HeightRequest="25"/>
                </Border>

                <Label x:Name="ThreeDotsLabel"
                       Grid.Column="1"
                       Text="..."
                       TextColor="{StaticResource Slate400}"
                       FontSize="24"
                       HorizontalOptions="End"
                       VerticalOptions="Start"
                       Margin="0,-10,10,0"
                       Opacity="0"
                       local:CursorBehavior.Cursor="Hand"/>
            </Grid>

            <VerticalStackLayout Grid.Row="1" VerticalOptions="Center">
                <Label Text="{Binding Name}" 
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource Slate900}, Dark={StaticResource White}}"
                       FontSize="16"
                       LineBreakMode="TailTruncation"/>

                <HorizontalStackLayout Spacing="8">
                    <Border HeightRequest="8" WidthRequest="8"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="0"
                            VerticalOptions="Center"
                            BackgroundColor="{Binding TeamName.TeamColor}"/>

                    <Label Text="{Binding TeamName.Name}"
                           FontSize="12"
                           VerticalOptions="Center"
                           TextColor="{StaticResource Slate400}"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <Grid Grid.Row="2" ColumnDefinitions="Auto, *" Margin="0,0,0,5">
                <Label Text="{x:Static strings:AppResources.Progress}"
                       FontSize="12"
                       VerticalOptions="Center"
                       TextColor="{StaticResource Slate400}"/>

                <Label Text="{Binding TotalTaskPorcentage, StringFormat='{}{0}%'}"
                       Grid.Column="1"
                       FontSize="12"
                       HorizontalOptions="End"
                       VerticalOptions="Center"
                       TextColor="{AppThemeBinding Light={StaticResource Slate900}, Dark={StaticResource White}}"/>
            </Grid>

            <VerticalStackLayout Grid.Row="3" Spacing="8">
                <ProgressBar Progress="{Binding TotalTaskPorcentage, Converter={StaticResource IntToProgressConverter}}"
                             HeightRequest="8"
                             ProgressColor="{StaticResource Blue500}"
                             BackgroundColor="{AppThemeBinding Light={StaticResource Slate200}, Dark={StaticResource Slate700}}"/>

                <Label FontSize="12" VerticalOptions="Center" TextColor="{StaticResource Slate400}">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding TaskCount}" TextColor="{StaticResource Slate400}"/>
                            <Span Text="/" TextColor="{StaticResource Slate400}"/>
                            <Span Text="{Binding TotalTasks}" TextColor="{StaticResource Slate400}" />
                            <Span Text=" " />
                            <Span Text="{x:Static strings:AppResources.Tasks}"  TextColor="{StaticResource Slate400}"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </VerticalStackLayout>
        </Grid>
    </Border>
</ContentView>