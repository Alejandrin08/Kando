<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kando_desktop.Views.ContentPages.HomePage"
             Shell.NavBarIsVisible="False"
             xmlns:local="clr-namespace:kando_desktop"
             xmlns:viewmodels="clr-namespace:kando_desktop.ViewModels.ContentPages"
             xmlns:strings="clr-namespace:kando_desktop.Resources.Strings"
             xmlns:controls="clr-namespace:kando_desktop.Controls"
             xmlns:components="clr-namespace:kando_desktop.Views.Components"
             ControlTemplate="{StaticResource MainPageTemplate}">

    <Grid>
        <ScrollView BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Slate900}}">
            <Grid RowDefinitions="Auto, Auto, Auto" Padding="40" RowSpacing="40">

                <Border Grid.Row="0"
                        HeightRequest="240"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 10">

                    <Border.Shadow>
                        <Shadow Brush="{AppThemeBinding Light=#20000000, Dark=#50000000}" 
                                Offset="0,10" Radius="20" Opacity="0.5"/>
                    </Border.Shadow>

                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Offset="0.0" Color="{AppThemeBinding Light=#dbeafe, Dark=#172c50}" />
                            <GradientStop Offset="1.0" Color="{AppThemeBinding Light=#eff6ff, Dark=#0f192d}" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid Padding="25">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0"
                               Text="{x:Static strings:AppResources.WelcomeBack}" 
                               TextColor="{StaticResource Blue500}"
                               FontSize="14" FontAttributes="Bold"/>

                        <Label Grid.Row="1"
                               Text="{x:Static strings:AppResources.WorkspaceTitle}"
                               Style="{StaticResource TitleHuge}" 
                               Margin="0,5,0,0"/>

                        <Label Grid.Row="2"
                               Text="{x:Static strings:AppResources.WorkspaceSubtitle}"
                               Style="{StaticResource SubtitleMuted}"
                               FontSize="14"
                               Margin="0,5,0,0"/>

                        <HorizontalStackLayout Grid.Row="3" Spacing="30" VerticalOptions="End" Margin="0,20,0,0">

                            <Border StrokeShape="RoundRectangle 10"
                                    WidthRequest="180" HeightRequest="75"
                                    BackgroundColor="{AppThemeBinding Light=#f2f7ff, Dark=#111d36}"
                                    Stroke="{AppThemeBinding Light=#80e5e7eb, Dark=#1f2c44}"
                                    Padding="10">
                                <Border.Shadow>
                                    <Shadow Brush="{AppThemeBinding Light=#10000000, Dark=Transparent}" Offset="0,4" Radius="10" Opacity="1"/>
                                </Border.Shadow>
                                <Grid ColumnDefinitions="Auto, *">
                                    <Border Grid.Column="0" Margin="10,0,0,0" StrokeShape="RoundRectangle 8" WidthRequest="40" HeightRequest="40"
                                            BackgroundColor="{AppThemeBinding Light=#c3d9fd, Dark=#1a315c}"
                                            Stroke="{AppThemeBinding Light=#c3d9fd, Dark=#1a315c}">
                                        <Image Source="menu.png" Aspect="Fill" WidthRequest="20" HeightRequest="20"/>
                                    </Border>

                                    <VerticalStackLayout Grid.Column="1" Margin="15,0,0,0" VerticalOptions="Center">
                                        <Label Text="{Binding ActiveBoardsCount}" Style="{StaticResource StatNumberStyle}"/>
                                        <Label Text="{x:Static strings:AppResources.ActiveBoards}" Style="{StaticResource StatLabelStyle}"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>

                            <Border StrokeShape="RoundRectangle 10"
                                    WidthRequest="200" HeightRequest="75"
                                    BackgroundColor="{AppThemeBinding Light=#f2f7ff, Dark=#111d36}"
                                    Stroke="{AppThemeBinding Light=#80e5e7eb, Dark=#1f2c44}"
                                    Padding="10">
                                <Border.Shadow>
                                    <Shadow Brush="{AppThemeBinding Light=#10000000, Dark=Transparent}" Offset="0,4" Radius="10" Opacity="1"/>
                                </Border.Shadow>
                                <Grid ColumnDefinitions="Auto, *">
                                    <Border Grid.Column="0" Margin="10,0,0,0" StrokeShape="RoundRectangle 8" WidthRequest="40" HeightRequest="40"
                                            BackgroundColor="{AppThemeBinding Light=#f4e6ce, Dark=#3f362b}"
                                            Stroke="{AppThemeBinding Light=#f4e6ce, Dark=#3f362b}">
                                        <Image Source="trend.png" Aspect="Fill" WidthRequest="20" HeightRequest="20"/>
                                    </Border>
                                    <VerticalStackLayout Grid.Column="1" Margin="15,0,0,0" VerticalOptions="Center">
                                        <Label Style="{StaticResource StatNumberStyle}">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding CompletedTasksCount}" />
                                                    <Span Text="/" />
                                                    <Span Text="{Binding TotalTasksCount}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label Text="{x:Static strings:AppResources.CompletedTasks}" Style="{StaticResource StatLabelStyle}"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>

                            <Border StrokeShape="RoundRectangle 10"
                                    WidthRequest="140" HeightRequest="75"
                                    BackgroundColor="{AppThemeBinding Light=#f2f7ff, Dark=#111d36}"
                                    Stroke="{AppThemeBinding Light=#80e5e7eb, Dark=#1f2c44}"
                                    Padding="10">
                                <Border.Shadow>
                                    <Shadow Brush="{AppThemeBinding Light=#10000000, Dark=Transparent}" Offset="0,4" Radius="10" Opacity="1"/>
                                </Border.Shadow>
                                <Grid ColumnDefinitions="Auto, *">
                                    <Border Grid.Column="0" Margin="10,0,0,0" StrokeShape="RoundRectangle 8" WidthRequest="40" HeightRequest="40"
                                            BackgroundColor="{AppThemeBinding Light=#cceedf, Dark=#143c3a}"
                                            Stroke="{AppThemeBinding Light=#cceedf, Dark=#143c3a}">
                                        <Image Source="group.png" Aspect="Fill" WidthRequest="30" HeightRequest="30"/>
                                    </Border>
                                    <VerticalStackLayout Grid.Column="1" Margin="15,0,0,0" VerticalOptions="Center">
                                        <Label Text="{Binding TeamsCount}" Style="{StaticResource StatNumberStyle}"/>
                                        <Label Text="{x:Static strings:AppResources.TeamsCount}" Style="{StaticResource StatLabelStyle}"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>

                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <VerticalStackLayout Grid.Row="1" Spacing="20">
                    <Grid ColumnDefinitions="Auto, Auto, *" VerticalOptions="Center">
                        <Border Grid.Column="0" 
                                StrokeShape="RoundRectangle 10"
                                WidthRequest="45" HeightRequest="45"
                                BackgroundColor="{AppThemeBinding Light={StaticResource Slate350}, Dark=#1f2937}"
                                Stroke="{AppThemeBinding Light=#e5e7eb, Dark=#1f2937}"
                                Padding="5">
                            <Image Source="{Binding GroupIconSource}" Aspect="Fill" WidthRequest="30" HeightRequest="30"/>
                        </Border>

                        <Label Grid.Column="1" 
                               Text="{x:Static strings:AppResources.YourTeamsTitle}"
                               Style="{StaticResource TitleHuge}"
                               FontSize="18"
                               Margin="15,0,0,0"
                               VerticalOptions="Center"/>

                        <Button Grid.Column="2"
                                Text="{x:Static strings:AppResources.NewTeamButton}"
                                Style="{StaticResource NewTeamButtonStyle}"
                                WidthRequest="160"
                                Command="{Binding CreateTeamCommand}"
                                local:CursorBehavior.Cursor="Hand"/>
                    </Grid>

                    <FlexLayout BindableLayout.ItemsSource="{Binding Teams}"
                                Wrap="Wrap"
                                Direction="Row"
                                JustifyContent="Start"
                                AlignItems="Start"
                                Margin="0, 0, -20, 0">
                        <FlexLayout.Triggers>
                            <DataTrigger TargetType="FlexLayout" Binding="{Binding Teams.Count}" Value="0">
                                <Setter Property="IsVisible" Value="False"/>
                            </DataTrigger>
                        </FlexLayout.Triggers>

                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <components:TeamCardView WidthRequest="300" Margin="0,0,5,5"/>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>

                    <VerticalStackLayout IsVisible="False" Spacing="10" Margin="0,0,0,20">
                        <VerticalStackLayout.Triggers>
                            <DataTrigger TargetType="VerticalStackLayout" Binding="{Binding Teams.Count}" Value="0">
                                <Setter Property="IsVisible" Value="True"/>
                            </DataTrigger>
                        </VerticalStackLayout.Triggers>

                        <Label Text="{x:Static strings:AppResources.NoTeams}" 
                               TextColor="{AppThemeBinding Light={StaticResource Slate500}, Dark={StaticResource Slate400}}"
                               FontSize="16" FontAttributes="Bold" HorizontalOptions="Start"/>
                        <Label Text="{x:Static strings:AppResources.NoTeamsDescription}" 
                               TextColor="{AppThemeBinding Light={StaticResource Slate500}, Dark={StaticResource Slate400}}"
                               FontSize="14" HorizontalOptions="Start"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="2" Spacing="20" Margin="0, -40, 0, 0">
                    <Grid ColumnDefinitions="Auto, Auto, *" VerticalOptions="Center">
                        <Border Grid.Column="0" 
                                StrokeShape="RoundRectangle 10"
                                WidthRequest="45" HeightRequest="45"
                                BackgroundColor="{AppThemeBinding Light={StaticResource Slate350}, Dark=#1f2937}"
                                Stroke="{AppThemeBinding Light=#e5e7eb, Dark=#1f2937}"
                                Padding="5">
                            <Image Source="{Binding MenuIconSource}" Aspect="Fill" WidthRequest="20" HeightRequest="20"/>
                        </Border>

                        <Label Grid.Column="1" 
                               Text="{x:Static strings:AppResources.YourBoardsTitle}"
                               Style="{StaticResource TitleHuge}"
                               FontSize="18"
                               Margin="15,0,0,0"
                               VerticalOptions="Center"/>

                        <Button Grid.Column="2"
                                Text="{x:Static strings:AppResources.NewBoardButton}"
                                Style="{StaticResource PrimaryButton}"
                                HorizontalOptions="End"
                                ImageSource="plus_white.png"
                                ContentLayout="Left, 10"
                                WidthRequest="160"
                                FontAttributes="None"
                                Command="{Binding CreateBoardCommand}"
                                local:CursorBehavior.Cursor="Hand">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding Teams.Count}" Value="0">
                                    <Setter Property="IsEnabled" Value="False" />
                                    <Setter Property="Opacity" Value="0.5" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </Grid>

                    <FlexLayout BindableLayout.ItemsSource="{Binding FilteredBoards}"
                                Wrap="Wrap"
                                Direction="Row"
                                JustifyContent="Start"
                                AlignItems="Start"
                                Margin="0, 0, -20, 0">
                        <FlexLayout.Triggers>
                            <DataTrigger TargetType="FlexLayout" Binding="{Binding FilteredBoards.Count}" Value="0">
                                <Setter Property="IsVisible" Value="False"/>
                            </DataTrigger>
                        </FlexLayout.Triggers>

                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <components:BoardCardView WidthRequest="300" Margin="0,0,5,5"/>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>

                    <VerticalStackLayout IsVisible="False" Spacing="10" Margin="0,0,0,10">
                        <VerticalStackLayout.Triggers>
                            <DataTrigger TargetType="VerticalStackLayout" Binding="{Binding FilteredBoards.Count}" Value="0">
                                <Setter Property="IsVisible" Value="True"/>
                            </DataTrigger>
                        </VerticalStackLayout.Triggers>

                        <Label Text="{x:Static strings:AppResources.NoBoards}" 
                               TextColor="{AppThemeBinding Light={StaticResource Slate500}, Dark={StaticResource Slate400}}"
                               FontSize="16" FontAttributes="Bold" HorizontalOptions="Start"/>
                        <Label Text="{x:Static strings:AppResources.NoBoardsDescription}" 
                               TextColor="{AppThemeBinding Light={StaticResource Slate500}, Dark={StaticResource Slate400}}"
                               FontSize="14" HorizontalOptions="Start"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Grid>
        </ScrollView>

        <Grid BackgroundColor="{AppThemeBinding Light=#80FFFFFF, Dark=#80000000}"
              IsVisible="{Binding IsBusy}"
              InputTransparent="False"
              ZIndex="99">
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">
                <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                   Color="{StaticResource Blue500}"
                                   HeightRequest="50" WidthRequest="50"/>
                <Label Text="{x:Static strings:AppResources.Loading}" 
                       TextColor="{AppThemeBinding Light={StaticResource Slate500}, Dark={StaticResource Slate400}}"
                       FontSize="16" FontAttributes="Bold"/>
            </VerticalStackLayout>
        </Grid>
        
        <Grid InputTransparent="True" 
              VerticalOptions="End" 
              HorizontalOptions="End"
              Margin="0,0,30,30">
            <components:ToastView x:Name="NotificationToast" />

        </Grid>
    </Grid>
</ContentPage>